<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/abn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ABN"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/abn_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/round_text_view"
                android:padding="10dp" />

            <TextView
                android:id="@+id/acn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ACN"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/acn_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/round_text_view"
                android:padding="10dp" />

            <TextView
                android:id="@+id/abn_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ABN Status"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="2dp" />

            <LinearLayout
                android:id="@+id/abn_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:background="@drawable/round_text_view">

            <TextView
                android:id="@+id/abn_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="5dp"
                android:padding="10dp" />

                <TextView
                    android:id="@+id/from_date"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="@color/orange_color"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/entity_name"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:text="Entity Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/entity_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/entity_type_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Entity Type"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/entity_type_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/round_text_view"
                android:padding="10dp" />




        </LinearLayout>

    </ScrollView>

</RelativeLayout>